<?xml version="1.0" encoding="utf-8"?>
<!--最外层的Lineayout是用来添加顶部的分割线-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/weather_main_foot_line"
    android:showDividers="beginning"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:clickable="false"
        android:id="@+id/layout"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/weather_bottom_add_city"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/add_city" />

        <LinearLayout
            android:id="@+id/weather_bottom_indictor"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/weather_bottom_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/weather_share" />
    </LinearLayout>

</LinearLayout>