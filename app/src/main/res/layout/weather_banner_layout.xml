<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/weather_banner_bg"
    android:background="@mipmap/weather_sun_morning">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/weather_banner_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_banner_city"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="#fff"
            android:text="@string/weather_banner_getLocation"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="34°"
            android:id="@+id/weather_banner_current_tmp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="晴"
                android:id="@+id/weather_banner_des"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="优"
                android:id="@+id/weather_banner_quality"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>